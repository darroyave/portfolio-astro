---
import '../styles/global.css';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>Dannover | Developer & Fotógrafo</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&display=swap" rel="stylesheet" />
	</head>
	<body class="min-h-screen overflow-x-hidden font-sans antialiased text-white bg-neutral-950">
		<!-- Header -->
		<header class="fixed top-0 left-0 right-0 z-50 flex items-center justify-between px-6 py-5 md:px-10 bg-transparent">
			<div class="flex items-center gap-6">
				<a href="/" class="flex items-center gap-2 text-white hover:opacity-90 transition-opacity">
					<svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
						<path d="M12 2L2 7l10 5 10-5-10-5z" />
						<path d="M2 17l10 5 10-5" />
					</svg>
					<span class="text-lg font-bold tracking-widest uppercase" style="font-family: 'Syne', sans-serif;">Dannover</span>
				</a>
				<button type="button" class="md:hidden p-2 -ml-2 text-white/90 hover:text-white" aria-label="Menú">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
			<nav class="hidden md:flex items-center gap-8">
				<a href="#home" class="text-sm font-medium tracking-widest uppercase text-white/90 hover:text-white transition-colors">Home</a>
				<a href="#about" class="text-sm font-medium tracking-widest uppercase text-white/90 hover:text-white transition-colors">About</a>
				<a href="#work" class="text-sm font-medium tracking-widest uppercase text-white/90 hover:text-white transition-colors">Work</a>
				<a href="#contact" class="text-sm font-medium tracking-widest uppercase text-white/90 hover:text-white transition-colors">Contact</a>
			</nav>
		</header>

		<!-- Main: dos paneles (Developer | Fotógrafo) -->
		<main class="flex min-h-screen w-full">
			<!-- Panel izquierdo: Developer -->
			<a href="/developer" class="group relative flex-1 min-h-screen flex flex-col justify-end p-8 md:p-12 bg-cover bg-center bg-no-repeat overflow-hidden transition-all duration-300 hover:flex-[1.02]" style="background-image: linear-gradient(to top, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0.2) 40%, transparent 70%), url('https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=1200');">
				<div class="absolute inset-0 bg-emerald-900/20 group-hover:bg-emerald-900/10 transition-colors" aria-hidden="true" />
				<div class="relative z-10">
					<span class="block text-5xl md:text-7xl font-bold mb-1 tracking-tight" style="font-family: 'Syne', sans-serif;">01.</span>
					<h2 class="text-3xl md:text-5xl font-bold mb-2 tracking-tight" style="font-family: 'Syne', sans-serif;">Developer</h2>
					<p class="text-sm md:text-base font-medium tracking-[0.3em] uppercase text-white/90">Code · Web · Apps</p>
					<span class="inline-flex items-center gap-2 mt-4 text-sm text-white/80 group-hover:gap-3 transition-all">
						Ver proyectos
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
					</span>
				</div>
			</a>

			<!-- Panel derecho: Fotógrafo -->
			<a href="/fotografo" class="group relative flex-1 min-h-screen flex flex-col justify-end p-8 md:p-12 bg-cover bg-center bg-no-repeat overflow-hidden transition-all duration-300 hover:flex-[1.02]" style="background-image: linear-gradient(to top, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0.2) 40%, transparent 70%), url('https://images.unsplash.com/photo-1452587925148-ce544e77e70d?w=1200');">
				<div class="absolute inset-0 bg-violet-900/20 group-hover:bg-violet-900/10 transition-colors" aria-hidden="true" />
				<div class="relative z-10">
					<span class="block text-5xl md:text-7xl font-bold mb-1 tracking-tight" style="font-family: 'Syne', sans-serif;">02.</span>
					<h2 class="text-3xl md:text-5xl font-bold mb-2 tracking-tight" style="font-family: 'Syne', sans-serif;">Fotógrafo</h2>
					<p class="text-sm md:text-base font-medium tracking-[0.3em] uppercase text-white/90">Portraits · Travel · Art</p>
					<span class="inline-flex items-center gap-2 mt-4 text-sm text-white/80 group-hover:gap-3 transition-all">
						Ver galería
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
					</span>
				</div>
			</a>
		</main>

		<!-- Footer -->
		<footer class="fixed bottom-0 left-0 right-0 z-40 flex items-center justify-between px-6 py-4 md:px-10 bg-neutral-950/95 backdrop-blur border-t border-white/5">
			<p class="text-xs md:text-sm text-white/70">© {new Date().getFullYear()} Dannover. All rights reserved.</p>
			<div class="flex items-center gap-4">
				<span class="text-xs text-white/50 uppercase tracking-wider hidden sm:inline">Developer</span>
				<div class="w-24 md:w-32 h-1 bg-white/10 rounded-full overflow-hidden">
					<div class="h-full w-1/2 bg-emerald-500 rounded-full" aria-hidden="true" title="Panel actual: Developer" />
				</div>
				<span class="text-xs text-white/50 uppercase tracking-wider hidden sm:inline">Fotógrafo</span>
			</div>
		</footer>
	</body>
</html>
